<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/home_title_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@drawable/header_bg"
        android:paddingTop="32dp" >

        <TextView
            android:id="@+id/searchId3"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:text="beyond"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/search_titel_image2"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/searchId3"
            android:layout_marginLeft="4dp"
            android:paddingBottom="5dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/top_back_icon" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/home_title_ll"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@drawable/header_bg"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:paddingTop="24dp" >

        <ImageView
            android:id="@+id/search_titel_image"
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingRight="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/top_back_icon" />

        <EditText
            android:id="@+id/searchId2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="4"
            android:background="@drawable/text_stroke"
            android:hint="搜索"
            android:paddingLeft="15dp"
            android:textSize="18sp" />

        <LinearLayout
             android:id="@+id/btn_search111"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1" 
            android:gravity="center">

            <Button
               
                android:layout_width="28dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/search_bar_icon_normal" >
            </Button>
        </LinearLayout>
    </LinearLayout>

    <WebView
        android:id="@+id/webview_search111"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>