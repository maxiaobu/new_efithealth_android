<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".app.activity.MainActivity" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_group_dynamic_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_avatar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_group_dynamic_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="18dp"
                android:text="昨天"
                android:textColor="#666"
                android:textSize="15sp" />

            <GridView
                android:id="@+id/item_group_dynamic_gv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:numColumns="3"
                android:scrollbars="none"
                android:verticalSpacing="10dp" >
            </GridView>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/item_group_dynamic_zan"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/item_group_dynamic_iv"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/zan" />

            <TextView
                android:id="@+id/item_group_dynamic_tv_zan"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:textSize="16sp"
                android:textColor="#666"
                android:text="1" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_group_dynamic_comment"
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/mess" />

            <TextView
                android:id="@+id/item_group_dynamic_comment_tv"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:textColor="#666"
                android:gravity="top"
                android:text="0" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>