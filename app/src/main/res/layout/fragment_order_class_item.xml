<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".app.activity.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/coach_list_pop_backgroud"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/item_order_class_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="10dp" >

                <TextView
                    android:id="@+id/item_order_class_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="各种教练"
                    android:textColor="#666"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/item_order_class_tv_clubname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="各种俱乐部"
                    android:textColor="#666"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_order_class_tv_subscribe"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="待预约"
                android:textColor="#666"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D5D5D5" />

        <TextView
            android:id="@+id/item_order_class_tv_classname"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="left|center_vertical"
            android:text="classname"
            android:textColor="#666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_order_class_tv_classtime"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:gravity="right|center_vertical"
            android:text="截止到2016-10-01"
            android:textColor="#666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_order_class_tv_classaddress"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="100dp"
            android:gravity="left|center_vertical"
            android:text="沈阳市铁西区套邻居"
            android:textColor="#666"
            android:textSize="15sp" />
         <TextView
            android:id="@+id/item_order_class_tv_classnum"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:gravity="right|center_vertical"
            android:text="剩余四次"
            android:textColor="#666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_order_class_tv_classmoney"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="50dp"
            android:gravity="right|center_vertical"
            android:text="共计:3000元"
            android:textColor="#666"
            android:textSize="15sp" />
        

        <TextView
            android:id="@+id/item_order_class_tv_commit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:background="@drawable/coach_list_pop_backgroud"
            android:text="现在预约"
            android:textColor="#666"
            android:textSize="15sp" />
        <LinearLayout
            android:id="@+id/item_order_class_ll" 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/coach_list_pop_backgroud"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/item_order_class_tv_jx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="继续支付"
                android:layout_weight="1"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="#666"/>
            <TextView 
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#D5D5D5"/>
            <TextView 
                android:id="@+id/item_order_class_tv_del"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="删除"
                android:layout_weight="1"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="#666"/>
            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>