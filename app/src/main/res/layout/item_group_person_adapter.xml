<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".app.activity.MainActivity" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="72dp">

        <ImageView
            android:id="@+id/item_person_g_head"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_empty" />

        <LinearLayout 
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView 
                android:id="@+id/item_person_g_name"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:text="dfsdfsdf"
                android:singleLine="true"
                android:textColor="#4d4d4d"
                />
             <TextView 
                 android:id="@+id/item_person_g_details"
                 android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:text="dfsdfsdf"
                android:singleLine="true"
                android:textColor="#8a8a8a"/>
        </LinearLayout>
        <TextView 
            android:id="@+id/item_person_g_yes"
            android:layout_marginRight="10dp"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="#4d4d4d"
            android:background="@drawable/coach_back_pop"
            android:text="通过"/>
    </LinearLayout>
</LinearLayout>