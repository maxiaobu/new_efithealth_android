<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_second_bar"
    
    android:background="@drawable/head"
    android:gravity="center_vertical"
    android:visibility="gone"
    android:orientation="horizontal"
    android:paddingTop="@dimen/padding_normal"
    android:paddingBottom="@dimen/padding_normal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
     >

    <LinearLayout
        android:id="@+id/ll_title_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/daoda"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/txt_info_top"
            style="@style/txt_second_title_style"
            android:background="@drawable/button_big_shape"
            android:text="@string/member_club_info" />

        <TextView
            android:id="@+id/txt_course_top"
            style="@style/txt_second_title_style"
            android:text="@string/member_club_course" />

        <TextView
            android:id="@+id/txt_dynamic_top"
            style="@style/txt_second_title_style"
            android:text="@string/member_club_dynamic" />
    </LinearLayout>
     <LinearLayout
        android:id="@+id/ll_title_top1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/daoda"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/txt_info_top1"
            style="@style/txt_second_title_style"
            android:background="@drawable/button_big_shape"
            android:text="@string/member_club_info" />

        <TextView
            android:id="@+id/txt_dynamic_top1"
            style="@style/txt_second_title_style"
            android:text="@string/member_club_dynamic" />
    </LinearLayout>

</LinearLayout>