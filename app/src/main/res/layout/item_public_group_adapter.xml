<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FFF"
    tools:context=".app.activity.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_public_group_head"
            android:layout_marginLeft="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_empty" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp" >

                <TextView
                    android:id="@+id/item_public_group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="sdfsdf"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:padding="5dp"
                    android:id="@+id/item_public_group_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/item_public_group_name"
                    android:background="@drawable/grouplistsort"
                    android:text="减肥"
                    android:textColor="#000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/item_public_group_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="5km"
                    android:layout_centerVertical="true"
                    android:textColor="#000"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/item_public_group_details"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:ellipsize="end"
                android:lines="2"
                android:text="豆腐干豆腐给对方多个"
                android:textColor="#4d4d4d"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>