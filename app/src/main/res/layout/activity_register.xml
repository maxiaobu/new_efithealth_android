<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F2"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="121dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@drawable/logo_fithealth" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_weight="1" />
    </LinearLayout>
 <LinearLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_weight="0.4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_login" >

        <EditText
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/number"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:hint="11位手机号码"
            android:maxLength="11"
            android:layout_weight="1"
            android:numeric="integer"
            android:padding="10dp"
            android:background="#FFF"
            android:textColor="#666" />
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eb8800"/>

        <EditText
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/sendPassId"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:hint="短信验证码"
            android:maxLength="20"
            android:padding="10dp"
            android:paddingTop="0dp"
            android:password="true"
            android:background="#FFF"
            android:textColor="#666" />
    </LinearLayout>

    <Button
        android:id="@+id/sendId"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.2"
        android:background="@drawable/shape_button"
        android:text="发送短信验证码"
        android:onClick="onTextClick"
        android:textColor="#eb8800"
        android:textSize="22sp" />

    <Button
        android:id="@+id/sendIdYin"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.2"
        android:background="@drawable/shape_button_yinchang"
        android:text=""
        android:textColor="#000000"
        android:textSize="22sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/sendIdNext"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.2"
        android:background="@drawable/shape_button"
        android:text="下一步"
        android:onClick="onTextClick"
        android:textColor="#eb8800"
        android:textSize="22sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.2"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:clickable="true"
            android:onClick="onTextClick"
            android:text="我同意《羿健康服务协议》"
            android:textColor="#eb8800"
            android:textColorHint="#eb8800" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="12" />

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onTextClick"
            android:text="转到登录 >"
            android:textColor="#eb8800"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3" />

</LinearLayout>